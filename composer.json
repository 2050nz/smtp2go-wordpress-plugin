{
    "require": {
        "smtp2go-oss/smtp2go-php": "1.0.0beta"
    },
    "require-dev": {
        "humbug/php-scoper": "^0.15.0"
    },
    "scripts": {
        "auto-scripts": {
            "removeBuild": "rm -r build/",
            "scopeBuild": "./vendor/bin/php-scoper add-prefix",
            "dumpBuildAutoload": "cd build && composer dumpautoload"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    }
}
